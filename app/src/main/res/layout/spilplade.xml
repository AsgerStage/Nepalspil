        <TextView
            android:text="16"
            android:layout_width="34dp"
            android:layout_height="wrap_content"
            android:id="@+id/tid"
            android:elevation="1dp"
            android:fontFamily="sans-serif"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_marginStart="2dp"
            android:layout_alignBaseline="@+id/felt6"
            android:layout_alignBottom="@+id/felt6"
            android:layout_toEndOf="@+id/ur"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/infobox"
            android:layout_below="@+id/tid"
            android:layout_toEndOf="@+id/ur"/>

        <!-- market felt-->
        <Button
            android:background="@android:color/transparent"
            android:id="@+id/felt6"
            android:layout_height="90dp"
            android:layout_width="110dp"
            android:layout_below="@+id/felt7"
            android:layout_alignStart="@+id/felt7"
            android:layout_marginTop="21dp" />

        <ImageView
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/dreng1"
            android:id="@+id/kaka"
            android:adjustViewBounds="false"
            android:layout_height="85dp"
            android:layout_weight="0.08"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/felt0" />


        <ImageView
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/pige2"
            android:id="@+id/asha"
            android:layout_height="85dp"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/kaka"
            android:layout_alignBottom="@+id/felt1" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ur0"
            android:id="@+id/ur"
            android:scaleType="centerCrop"
            android:layout_below="@+id/felt7"
            android:layout_centerHorizontal="true" />

        <!-- skole felt -->
        <Button
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/felt4"
            android:layout_alignBottom="@+id/felt5"
            android:layout_alignStart="@+id/ur"
            android:layout_alignTop="@+id/felt5"
            android:layout_alignEnd="@+id/felt0" />

        <!-- boghandel felt-->
        <Button
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"
            android:id="@+id/felt3"
            android:layout_width="120dp"
            android:layout_marginStart="49dp"
            android:layout_alignBottom="@+id/felt4"
            android:layout_toEndOf="@+id/infobox"
            android:layout_alignTop="@+id/felt4" />

        <!-- lektiehjÃ¦lp felt-->
        <Button
            android:background="@android:color/transparent"
            android:id="@+id/felt1"
            android:layout_height="80dp"
            android:layout_width="100dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/infobox"
            android:layout_marginStart="23dp" />

        <!-- butik felt-->
        <Button
            android:layout_width="110dp"
            android:id="@+id/felt7"
            android:background="@android:color/transparent"
            android:layout_marginStart="81dp"
            android:layout_alignParentStart="true"
            android:layout_height="100dp" />

        <!-- home felt-->
        <Button
            android:background="@android:color/transparent"
            android:layout_height="wrap_content"
            android:id="@+id/felt0"
            android:layout_width="120dp"
            android:layout_alignBaseline="@+id/felt1"
            android:layout_alignBottom="@+id/felt1"
            android:layout_alignStart="@+id/ur" />


        <!-- Farm felt -->
        <Button
            android:background="@android:color/transparent"
            android:id="@+id/felt5"
            android:layout_height="100dp"
            android:layout_marginTop="28dp"
            android:layout_width="140dp"
            android:layout_below="@+id/felt6"
            android:layout_alignStart="@+id/felt6" />

        <!-- cykel felt-->
        <Button
            android:background="@android:color/transparent"
            android:id="@+id/felt2"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_above="@+id/felt3"
            android:layout_alignStart="@+id/felt3"
            android:layout_alignTop="@+id/felt6"
            android:layout_alignEnd="@+id/felt3" />


    </RelativeLayout>

</LinearLayout>