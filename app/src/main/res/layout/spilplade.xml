<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fullboard"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.08">

        <!-- home felt-->
        <Button
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/felt7"
            android:layout_toEndOf="@+id/felt7"
            android:layout_marginStart="105dp"
            android:id="@+id/felt0" />

        <!-- homework felt -->

        <!-- marked felt-->

        <!-- skole felt -->

        <!-- Bookstore felt -->

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_preferences"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/ingameoptions"
            style="?android:borderlessButtonStyle"
            android:layout_toStartOf="@+id/felt6" />

        <!-- Shop felt -->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="71dp"
            android:id="@+id/felt7"
            android:background="@android:color/transparent"
            android:layout_below="@+id/ingameoptions"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/pige2"
            android:id="@+id/asha"
            android:layout_height="85dp"
            android:layout_alignBottom="@+id/felt0"
            android:layout_centerHorizontal="true" />

        <!-- Workshop felt -->

        <!-- Farm felt -->

        <Button
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/felt5"
            android:layout_marginBottom="24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/felt6" />

        <Button
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/felt4"
            android:layout_alignBaseline="@+id/felt5"
            android:layout_alignBottom="@+id/felt5"
            android:layout_centerHorizontal="true" />

        <Button
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/felt6"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/felt7" />

        <Button
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:id="@+id/felt1"
            android:layout_alignBottom="@+id/asha"
            android:layout_toEndOf="@+id/asha" />

        <Button
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/felt2"
            android:layout_marginTop="26dp"
            android:layout_alignTop="@+id/felt6"
            android:layout_alignStart="@+id/felt1" />

        <Button
            android:background="@android:color/transparent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/felt3"
            android:layout_alignBaseline="@+id/felt4"
            android:layout_alignBottom="@+id/felt4"
            android:layout_alignStart="@+id/felt2" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/infobox"
            android:layout_alignTop="@+id/felt6"
            android:layout_alignStart="@+id/felt0" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@drawable/dreng1"
        android:id="@+id/kaka"
        android:adjustViewBounds="false"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/asha"
        android:layout_alignEnd="@+id/asha"
        android:layout_weight="0.08" />
</LinearLayout>