<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/school"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/felt4" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/home"
            android:id="@+id/felt0"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/homework"
            android:id="@+id/felt1"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/felt2" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/clothingstore"
            android:id="@+id/felt7"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/barn"
            android:id="@+id/felt5"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/felt6" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bookstore"
            android:id="@+id/felt3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/felt4" />

        <TextView
            android:text="TextView"
            android:layout_width="207dp"
            android:layout_height="116dp"
            android:gravity="center"
            android:id="@+id/infobox"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/felt6"
            android:layout_alignTop="@+id/felt6" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/marketplace"
            android:id="@+id/felt6"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/workshop"
            android:id="@+id/felt2"
            android:layout_alignTop="@+id/felt6"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/felt6" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/imgUr"
            android:layout_alignTop="@+id/felt2"
            android:layout_toStartOf="@+id/felt2" />
    </RelativeLayout>
</LinearLayout>