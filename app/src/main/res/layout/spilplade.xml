<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/school"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/felt4"
            style="?android:borderlessButtonStyle"/>




        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/home"
            android:id="@+id/felt0"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            style="?android:borderlessButtonStyle"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/homework"
            android:id="@+id/felt1"
            android:layout_alignStart="@+id/felt2"
            android:layout_above="@+id/infobox"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignRight="@id/felt2"
            style="?android:borderlessButtonStyle"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/clothingstore"
            android:id="@+id/felt7"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            style="?android:borderlessButtonStyle"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/barn"
            android:id="@+id/felt5"
            android:layout_alignParentBottom="true"
            style="?android:borderlessButtonStyle"
             />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bookstore"
            android:id="@+id/felt3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/felt4"
            style="?android:borderlessButtonStyle"/>

        <TextView
            android:text="TextView"
            android:layout_width="207dp"
            android:layout_height="116dp"
            android:gravity="center"
            android:id="@+id/infobox"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/felt6"
            android:layout_below="@+id/felt0"

            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/marketplace"
            android:id="@+id/felt6"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            style="?android:borderlessButtonStyle"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/workshop"
            android:id="@+id/felt2"
            android:layout_alignTop="@+id/felt6"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/felt6"
            style="?android:borderlessButtonStyle"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/pige2"
            android:id="@+id/asha" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/dreng1"
            android:id="@+id/kaka" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ur1"
            android:layout_alignTop="@+id/felt2"
            android:layout_toStartOf="@+id/felt2"
            android:id="@+id/imgUr" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@android:drawable/ic_menu_preferences"
            android:id="@+id/ingameoptions"
            style="?android:borderlessButtonStyle"
            android:layout_alignBottom="@+id/infobox"
            android:layout_alignStart="@+id/felt4" />
    </RelativeLayout>
</LinearLayout>