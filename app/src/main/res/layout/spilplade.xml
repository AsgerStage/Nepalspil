<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="64dp"
    android:paddingRight="64dp"
    android:paddingTop="16dp"
    tools:context="com.example.asger.nepalspil.models.SpillePlade">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="5"
        android:layout_column="6">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_row="5"
            android:layout_column="7">

            <RelativeLayout
                android:layout_width="250dip"
                android:layout_height="120dip"
                android:src="@drawable/square"
                android:layout_gravity="center"
                android:clickable="true"
                android:focusable="true">

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:id="@+id/infobox"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignEnd="@+id/imgUr" />

                <ImageView
                    android:layout_width="@android:dimen/app_icon_size"
                    android:layout_height="50dp"
                    android:src="@drawable/ur1"
                    android:gravity="left"
                    android:id="@+id/imgUr"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="48dp" />
            </RelativeLayout>

            <ImageButton
                android:layout_width="180dip"
                android:layout_height="90dip"
                android:src="@drawable/barn"
                android:id="@+id/felt5"
                android:layout_gravity="left|bottom"
                android:onClick="true" />

            <ImageButton
                android:layout_width="180dip"
                android:layout_height="90dip"
                android:src="@drawable/bookstore"
                android:id="@+id/felt3"
                android:onClick="true"
                android:layout_gravity="right|bottom" />

            <ImageButton
                android:layout_width="180dip"
                android:layout_height="90dip"
                android:src="@drawable/home"
                android:id="@+id/felt0"
                android:onClick="true"
                android:layout_gravity="center_horizontal|top" />

            <ImageButton
                android:layout_width="180dip"
                android:layout_height="90dip"
                android:src="@drawable/school"
                android:id="@+id/felt4"
                android:onClick="true"
                android:layout_gravity="center_horizontal|bottom" />

            <ImageButton
                android:layout_width="180dip"
                android:layout_height="90dip"
                android:src="@drawable/clothingstore"
                android:id="@+id/felt7"
                android:layout_gravity="left|top"
                android:onClick="true" />

            <ImageButton
                android:layout_width="180dip"
                android:layout_height="90dip"
                android:src="@drawable/homework"
                android:id="@+id/felt1"
                android:onClick="true"
                android:layout_gravity="right|top" />

            <ImageButton
                android:layout_width="180dip"
                android:layout_height="90dip"
                android:src="@drawable/workshop"
                android:id="@+id/felt2"
                android:onClick="true"
                android:layout_gravity="right|center_vertical" />

            <ImageButton
                android:layout_width="180dip"
                android:layout_height="90dip"
                android:src="@drawable/marketplace"
                android:id="@+id/felt6"
                android:layout_gravity="left|center_vertical"
                android:onClick="true" />


        </FrameLayout>
    </GridLayout>
</RelativeLayout>
