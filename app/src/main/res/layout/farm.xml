<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1"
              android:background="@drawable/farminside">

    <include layout="@layout/topbar"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_weight="1.25">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageView6"></LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/pige1"
            android:id="@+id/imageView5"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="45dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/workButton"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/arbejdbutton"

            android:layout_alignBottom="@+id/imageView5"
            android:layout_centerHorizontal="true"/>

        <ImageView
            app:srcCompat="@drawable/bubble"
            android:id="@+id/imageView6"
            android:layout_width="300dp"
            android:layout_height="220dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/playerinfo"
            android:layout_marginStart="38dp"/>

        <TextView
            android:text="Info om farm"
            android:id="@+id/fieldinfo"
            android:textSize="14sp"
            android:textStyle="normal|bold"
            android:textAlignment="center"
            android:layout_width="160dp"
            android:layout_marginStart="69dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageView6"
            android:layout_marginTop="24dp"/>

        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/scrollmoney"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_above="@+id/workButton"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</LinearLayout>