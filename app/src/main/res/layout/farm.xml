<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/barninside">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="38dp"
            app:srcCompat="@drawable/fieldhelp"
            android:id="@+id/farmHelp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="wrap_content"
            app:srcCompat="@drawable/newback"
            android:id="@+id/backButton"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_weight="1.25">

        <TextView
            android:background="#8888"
            android:text="Egenskaber"
            android:layout_width="wrap_content"
            android:layout_height="179dp"
            android:id="@+id/playerinfo"
            android:layout_alignBottom="@+id/imageView5"
            android:layout_alignParentStart="true"
            android:fontFamily="sans-serif" />

        <ImageView
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/bubble"
            android:id="@+id/imageView6"
            android:layout_width="250dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/imageView5" />

        <TextView
            android:text="Info om farm"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:id="@+id/fieldinfo"
            android:layout_marginTop="62dp"
            android:textSize="20sp"
            android:textStyle="normal|bold"
            android:layout_marginStart="49dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageView6"
            android:layout_alignEnd="@+id/workButton" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/pige1"
            android:id="@+id/imageView5"
            android:layout_marginEnd="12dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="52dp" />

        <Button
            android:text="Arbejd"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:id="@+id/workButton"
            android:layout_alignBottom="@+id/imageView6"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</LinearLayout>