<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:fab="http://schemas.android.com/apk/res-auto"


              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="1"
              android:background="@drawable/sky"
              android:baselineAligned="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageButton
            android:layout_height="219dp"
            app:srcCompat="@drawable/figur_asha_halv"
            android:id="@+id/imageButton4"
            android:layout_weight="0.48"
            android:scaleType="fitCenter"
            android:elevation="0dp"
            android:background="@null"
            android:visibility="visible"
            android:layout_width="199dp"
            android:layout_marginStart="24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:state_checked="false"
            android:state_pressed="true"

            />


        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo_skoleliv"
            android:id="@+id/imageView3"
            android:layout_marginEnd="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>

        <ImageView
            app:srcCompat="@drawable/figur_krishna_halv"
            android:id="@+id/imageButton5"
            android:layout_weight="0.51"
            android:scaleType="fitCenter"
            android:background="?android:selectableItemBackground"
            android:layout_height="219dp"
            android:visibility="visible"
            android:layout_width="199dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="11dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:srcCompat="@drawable/checkmark"
            android:id="@+id/checkmarkkrishna"
            android:layout_alignTop="@+id/imageButton5"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="?android:selectableItemBackground"
            android:id="@+id/genoptagKnap"
            android:layout_marginBottom="15dp"
            android:layout_above="@+id/indstillingerknap"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/knap_genoptag_spil"/>

        <ImageView
            android:layout_width="wrap_content"
            android:id="@+id/indstillingerknap"
            android:background="?android:selectableItemBackground"
            android:layout_alignBottom="@+id/checkmarkkrishna"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp"
            app:srcCompat="@drawable/knap_indstillinger"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:adjustViewBounds="true"
            android:src="@drawable/logo_danida"
            android:id="@+id/logo_danida"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/startknap"
            android:background="?android:selectableItemBackground"
            android:layout_marginBottom="15dp"
            android:layout_above="@+id/genoptagKnap"
            android:layout_alignStart="@+id/genoptagKnap"
            app:srcCompat="@drawable/knap_start_spil"/>

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_above="@+id/musik"
            android:text="v 1.01"/>
        <CheckBox
            android:id="@+id/musik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:text="Musik"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:id="@+id/overskrift"
            android:text="Nepalspillet"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="48dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="StÃ¸ttet af:"
            android:textSize="7sp"
            android:layout_above="@+id/logo_danida"
            android:layout_alignStart="@+id/logo_danida"/>

    </RelativeLayout>
</LinearLayout>
