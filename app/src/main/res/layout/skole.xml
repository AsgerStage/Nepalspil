<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/felt_skole">
    <include layout="@layout/topbar"/>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="132dp">

        </LinearLayout>

        <TextView
            android:text="Du gÃ¥r i 5. klasse"
            android:layout_width="288dp"
            android:layout_height="match_parent"
            android:id="@+id/klassetrin"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_marginTop="33dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/flyvoptekst_spis"
            android:layout_marginStart="123dp"/>

        <ImageView
            app:layout_heightPercent="65%"
            app:layout_widthPercent="25%"
            app:layout_marginLeftPercent="27%"
            app:srcCompat="@drawable/figur_laxmi_hel"
            android:adjustViewBounds="true"
            android:id="@+id/figur"
            android:layout_alignParentBottom="true"
            />



        <TextView
            android:text="@string/skole_taleboble"
            android:gravity="center"
            android:background="@drawable/taleboble_bundhoejre_straekbar2"
            android:textSize="20sp"
            app:layout_widthPercent="35%"
            android:layout_height="wrap_content"
            app:layout_marginLeftPercent="0%"
            app:layout_marginTopPercent="15%"
            android:id="@+id/taleboble_tekst"
            />

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/flyvoptekst_studer"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="50dp"
            android:text="+1 viden"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:id="@+id/flyvoptekst_spis"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:textAlignment="center"
            android:textColor="@color/food"
            android:text="+10 mad"
            android:textSize="20sp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/knap_studer_skole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/knap_studer"
                android:layout_weight="1"/>

            <Button
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/knap_spis_skole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/knap_spis"
                android:layout_weight="1"/>

            <Button
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/knap_eksamen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eksamen"
                android:layout_weight="1"
                android:elevation="0dp"/>

        </LinearLayout>


    </android.support.percent.PercentRelativeLayout>



</LinearLayout>