<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/felt_skole">
    <include layout="@layout/topbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="132dp">

        </LinearLayout>

        <TextView
            android:text="TextView"
            android:layout_width="288dp"
            android:layout_height="match_parent"
            android:id="@+id/klassetrin"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_marginTop="33dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/flyvoptekst_spis"
            android:layout_marginStart="123dp"
            android:layout_alignBottom="@+id/taleboble"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/figur_laxmi_hel"
            android:adjustViewBounds="true"
            android:id="@+id/figur"
            android:layout_toEndOf="@+id/flyvoptekst_studer"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-90dp"/>

        <ImageView
            app:srcCompat="@drawable/taleboble"
            android:id="@+id/taleboble"
            android:layout_width="200dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_height="150dp"/>

        <TextView
            android:text="@string/skole_taleboble"
            android:layout_width="120dp"
            android:layout_height="102dp"
            android:id="@+id/taleboble_tekst"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/taleboble"
            android:layout_alignEnd="@+id/taleboble"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/flyvoptekst_studer"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="50dp"
            android:text="+1 viden"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:id="@+id/flyvoptekst_spis"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:textAlignment="center"
            android:textColor="@color/food"
            android:text="+10 mad"
            android:textSize="20sp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/knap_studer_skole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/knap_studer"
                android:layout_weight="1"/>

            <Button
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/knap_spis_skole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/knap_spis"
                android:layout_weight="1"/>

            <Button
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/knap_eksamen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eksamen"
                android:layout_weight="1"
                android:elevation="0dp"/>

        </LinearLayout>


    </RelativeLayout>



</LinearLayout>