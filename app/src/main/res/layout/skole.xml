<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/skoleinside">
    <include layout="@layout/topbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="247dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="132dp">

        </LinearLayout>

        <TextView
            android:text="TextView"
            android:layout_width="288dp"
            android:layout_height="match_parent"
            android:id="@+id/klassetrin"
            android:textAlignment="center"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:layout_marginTop="33dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/scrollfood"
            android:layout_marginStart="123dp"
            android:layout_alignBottom="@+id/imageView23"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/pige1"
            android:id="@+id/imageView22"
            android:layout_alignTop="@+id/klassetrin"
            android:layout_toEndOf="@+id/plusknowledge"
            android:layout_marginTop="26dp"/>

        <ImageView
            app:srcCompat="@drawable/bubble"
            android:id="@+id/imageView23"
            android:layout_width="300dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_height="150dp"/>

        <TextView
            android:text="."
            android:layout_width="120dp"
            android:layout_height="102dp"
            android:id="@+id/schoolText"
            android:layout_weight="1"
            android:layout_marginEnd="79dp"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/imageView22"
            android:layout_marginTop="12dp"/>

        <TextView
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:id="@+id/plusknowledge"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:text="+1 viden"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:id="@+id/scrollfood"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:textColor="@color/food"
            android:text="+10 mad"
            android:textSize="20sp"/>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="137dp">

        <Button
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/studerskolebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Studer"
            android:layout_weight="1"/>

        <Button
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/spisskolebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spis"
            android:layout_weight="1"/>

        <Button
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/eksamenbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eksamen"
            android:layout_weight="1"
            android:elevation="0dp"/>

    </LinearLayout>


</LinearLayout>