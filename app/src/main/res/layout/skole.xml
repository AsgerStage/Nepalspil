<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="31dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/newback"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:id="@+id/skoleBack"
            android:layout_alignParentBottom="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/fieldhelp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/skoleHelp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="132dp">

        <TextView
            android:text="."
            android:layout_width="match_parent"
            android:layout_height="102dp"
            android:id="@+id/schoolText"
            android:layout_weight="1" />

        <TextView
            android:text="TextView"
            android:layout_width="288dp"
            android:layout_height="match_parent"
            android:id="@+id/klassetrin"
            android:textAlignment="textEnd" />
    </LinearLayout>

    <TextView
        android:layout_width="427dp"
        android:layout_height="wrap_content"
        android:id="@+id/plusknowledge" />

    <TextView
        android:layout_width="578dp"
        android:layout_height="128dp"
        android:id="@+id/schoolPlayerInfo"
        android:gravity="right" />

    <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="match_parent">

        <Button
           android:text="studer"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/Studer"
           android:layout_weight="1" />

       <Button
           android:text="spis"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/spis"
           android:layout_weight="1" />

       <Button
           android:text="eksamen"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/eksamen"
           android:layout_weight="1" />

    </LinearLayout>


</LinearLayout>