<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1"
              android:background="@drawable/felt_eksamen"
    >

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="26dp">

            <Button
                android:text="Brød og kød"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:id="@+id/svar1"
                android:layout_weight="0.98"
                android:textAlignment="center"/>

            <Button
                android:text="Ris, løg, hvidløg og chili"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:id="@+id/svar2"
                android:layout_weight="1.00"
                android:textAlignment="center"/>

            <Button
                android:text="Nudler og chips"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:id="@+id/svar3"
                android:layout_weight="1.00"
                android:textAlignment="center"/>

        </LinearLayout>

        <TextView
            android:text="Hvilke ingredienser bruges blandt andet i nepalesisk skolemad?"
            android:id="@+id/spørgsmål"
            android:layout_width="320dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="99dp"
            android:layout_height="130dp"
            android:textSize="24sp"
            android:textColor="@color/white"/>

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true">

        </FrameLayout>

    </RelativeLayout>

</LinearLayout>