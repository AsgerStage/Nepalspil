<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hjeminside"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="411dp">

        <ImageView
            android:layout_width="57dp"
            android:layout_height="35dp"
            app:srcCompat="@drawable/newback"
            android:id="@+id/hjemBack" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hjemtext"
            android:layout_weight="0.11" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="369dp"
            app:srcCompat="@drawable/dreng1"
            android:id="@+id/hjemprofile"
            android:layout_weight="0.11" />

        <ImageView
            app:srcCompat="@drawable/fieldhelp"
            android:id="@+id/hjemhelp"
            android:layout_width="57dp"
            android:layout_height="35dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="127dp">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:text="Sov"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/sleep"
            android:layout_weight="1" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:text="Tilbage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hjemback"
            android:layout_weight="1" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>