<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="31dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/newback"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/lektieBack" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/fieldhelp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/imageView10" />
    </RelativeLayout>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:id="@+id/lektiehjaelpTextField" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:id="@+id/lektiePlayerInfo" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:text="Få lektiehjælp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/learn"
            android:layout_weight="1"
            android:elevation="0dp"
            android:textAlignment="center" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.61" />

    </LinearLayout>

</LinearLayout>