<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp">

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/ikonviden"
            android:id="@+id/imageView22"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            app:srcCompat="@drawable/newback"
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/fieldhelp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/markedHelp" />

        <TextView
            android:text="Penge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textpenge"
            android:elevation="1dp"
            android:fontFamily="sans-serif"
            android:textSize="24sp"
            android:textColor="@color/money"
            android:layout_alignTop="@+id/imageView22"
            android:layout_toEndOf="@+id/imageView22"
            android:layout_marginStart="64dp" />

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/ikonpenge"
            android:id="@+id/imageView23"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textpenge" />

        <TextView
            android:text="Viden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textviden"
            android:elevation="1dp"
            android:fontFamily="sans-serif"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_alignBottom="@+id/imageView23"
            android:layout_toStartOf="@+id/imageView22" />

        <TextView
            android:text="Mad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textmad"
            android:elevation="1dp"
            android:fontFamily="sans-serif"
            android:textSize="24sp"
            android:textColor="@color/food"
            android:layout_alignBaseline="@+id/textviden"
            android:layout_alignBottom="@+id/textviden"
            android:layout_toEndOf="@+id/backButton" />

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/ikonmad"
            android:id="@+id/imageView21"
            android:layout_marginStart="50dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/backButton" />
    </RelativeLayout>

    <TextView
        android:text="Info about market"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:id="@+id/fieldinfo" />

    <TextView
        android:text="Stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/playerinfo"
        android:layout_weight="0.97" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="79dp">

        <Button
            android:text="Arbejd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/workButton"
            android:layout_weight="1" />

        <Button
            android:text="Spis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/eatButton"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>