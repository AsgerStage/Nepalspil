<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1"
              android:background="@drawable/markedinside">
    <include layout="@layout/topbar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:layout_weight="0.67"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <Button
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/arbejdbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workButton"
                android:layout_weight="1"/>

            <Button
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/spisbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eatButton"
                android:layout_weight="1"/>

        </LinearLayout>

        <ImageView
            app:srcCompat="@drawable/bubble"
            android:id="@+id/imageView31"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginEnd="21dp"
            android:layout_above="@+id/food"
            android:layout_alignEnd="@+id/food"/>

        <TextView
            android:text="Info about market"
            android:id="@+id/fieldinfo"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_marginTop="37dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageView31"
            android:layout_marginStart="38dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/pige1"
            android:id="@+id/imageView30"
            android:layout_marginEnd="14dp"
            android:layout_above="@+id/linearLayout2"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/food"
            android:textAlignment="center"
            android:layout_marginEnd="102dp"
            android:textColor="@color/food"
            android:textSize="20sp"
            android:layout_width="100dp"
            android:layout_below="@+id/imageView30"
            android:layout_alignEnd="@+id/imageView30" />

        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/money"
            android:textAlignment="textEnd"
            android:textColor="@color/money"
            android:textSize="20sp"
            android:layout_width="100dp"
            android:layout_marginStart="77dp"
            android:layout_below="@+id/imageView31"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</LinearLayout>