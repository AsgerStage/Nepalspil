<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/markedinside">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp">

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/ikonviden"
            android:id="@+id/imageView22"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            app:srcCompat="@drawable/newback"
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/fieldhelp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/markedHelp" />

        <TextView
            android:text="Penge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textpenge"
            android:elevation="1dp"
            android:fontFamily="sans-serif"
            android:textSize="24sp"
            android:textColor="@color/money"
            android:layout_alignTop="@+id/imageView22"
            android:layout_toEndOf="@+id/imageView22"
            android:layout_marginStart="64dp" />

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/ikonpenge"
            android:id="@+id/imageView23"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textpenge" />

        <TextView
            android:text="Viden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textviden"
            android:elevation="1dp"
            android:fontFamily="sans-serif"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_alignBottom="@+id/imageView23"
            android:layout_toStartOf="@+id/imageView22" />

        <TextView
            android:text="Mad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textmad"
            android:elevation="1dp"
            android:fontFamily="sans-serif"
            android:textSize="24sp"
            android:textColor="@color/food"
            android:layout_alignBaseline="@+id/textviden"
            android:layout_alignBottom="@+id/textviden"
            android:layout_toEndOf="@+id/backButton" />

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/ikonmad"
            android:id="@+id/imageView21"
            android:layout_marginStart="50dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/backButton" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Stats"
            android:layout_width="84dp"
            android:layout_height="80dp"
            android:id="@+id/playerinfo"
            android:layout_below="@+id/fieldinfo"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:layout_weight="0.67"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">

            <Button
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/arbejdbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/workButton"
                android:layout_weight="1" />

            <Button
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/spisbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/eatButton"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/money"
            android:textAlignment="center"
            android:layout_width="150dp"
            android:layout_below="@+id/playerinfo"
            android:layout_toEndOf="@+id/playerinfo"
            android:textColor="@color/money" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/food"
            android:textAlignment="center"
            android:layout_marginEnd="85dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/food" />

        <ImageView
            app:srcCompat="@drawable/bubble"
            android:id="@+id/imageView31"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginEnd="21dp"
            android:layout_above="@+id/food"
            android:layout_alignEnd="@+id/food" />

        <TextView
            android:text="Info about market"
            android:id="@+id/fieldinfo"
            android:layout_marginTop="16dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageView31" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/pige1"
            android:id="@+id/imageView30"
            android:layout_marginEnd="14dp"
            android:layout_alignTop="@+id/fieldinfo"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>