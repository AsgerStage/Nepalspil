<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/felt_butik"
             >

    <include layout="@layout/topbar"/>



    <android.support.percent.PercentRelativeLayout
        android:layout_marginTop="34dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            app:layout_heightPercent="65%"
            app:layout_widthPercent="25%"
            app:srcCompat="@drawable/figur_laxmi_halv"
            android:layout_marginEnd="-30dp"
            android:id="@+id/figur"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            />


        <Button
            android:text="Køb kladehæfte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/knap_koeb"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/felt_butik_front"
            android:layout_gravity="end|bottom"/>

        <me.grantland.widget.AutofitTextView
            android:id="@+id/taleboble_tekst"
            app:layout_widthPercent="35%"
            android:layout_height="wrap_content"
            android:text="@string/butik_taleboble"
            android:background="@drawable/taleboble_straekbar2"
            app:layout_marginRightPercent="12%"
            android:layout_alignParentEnd="true"/>

    </android.support.percent.PercentRelativeLayout>


</FrameLayout>