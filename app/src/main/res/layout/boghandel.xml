<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/boghandelinside"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/ikonviden"
            android:id="@+id/imageView28"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/newback"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:id="@+id/backButton" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/fieldhelp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/boghandelHelp" />

        <TextView
            android:text="Viden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textviden"
            android:elevation="1dp"
            android:fontFamily="sans-serif"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/imageView28" />

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/ikonpenge"
            android:id="@+id/imageView29"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/textpenge"
            android:layout_marginStart="9dp" />

        <TextView
            android:text="Penge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textpenge"
            android:elevation="1dp"
            android:fontFamily="sans-serif"
            android:textSize="24sp"
            android:textColor="@color/money"
            android:layout_marginStart="56dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/imageView28" />

        <TextView
            android:text="Mad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textmad"
            android:elevation="1dp"
            android:fontFamily="sans-serif"
            android:textSize="24sp"
            android:textColor="@color/food"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/backButton"
            android:layout_marginStart="9dp" />

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:srcCompat="@drawable/ikonmad"
            android:id="@+id/imageView27"
            android:layout_alignTop="@+id/textmad"
            android:layout_toEndOf="@+id/textmad" />
    </RelativeLayout>

    <TextView
        android:text="Info om boghandel"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:id="@+id/fieldinfo" />

    <TextView
        android:text="Egenskaber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bookstorePlayerInfo"
        android:layout_weight="0.97" />

    <TextView
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:id="@+id/scrollmoney"
        android:textColor="@color/money"
        android:textAlignment="center" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="79dp">

        <Button
            android:text="Arbejd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/workButton"
            android:layout_weight="1" />

        <Button
            android:text="KÃ¸b en bog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buyBookButton"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>